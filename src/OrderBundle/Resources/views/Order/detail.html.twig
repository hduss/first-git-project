{# src/OrderBundle/Resources/views/Order/detail.html.twig #}

{% extends 'OrderBundle::layout.html.twig' %}

{% block main %}


<h1>Commande N°{{ cart.number }}</h1>

<table>
    <tbody>
        <tr>
            <th>Date</th>
            <td>{{ cart.date|date }}</td>
        </tr>
        <tr>
            <th>Statut</th>
            <td>{{ cart.status }}</td>
        </tr>
    </tbody>
</table>

<table>
    <thead>
        <tr>
            <th>Désignation</th>
            <th>Prix</th>
            <th>Quantité</th>
        </tr>
        
    </thead>

    <tbody>

    {% for line in cart.lines %}

        <tr>
            <td>
                {{ line.designation }}
            </td>
            <td>
                {{ line.price|number_format(2, ',', ' ') }}&nbsp;€
            </td>
            <td>
                {{ line.quantity }}
            </td>
        </tr>


    {% endfor %}


    </tbody>

</table>

<p>
    <a href="{{ path('order_add_line', {'id': cart.id}) }}">
        Ajouter une ligne
    </a>
</p>

<p>
    <a href="{{ path('order_list') }}">
        Retour à la liste
    </a>
</p>

{% endblock %}


